<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:baselineAligned="true">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="108dp"
        android:text="@string/group_create"
        android:id="@+id/button_createGroup"
        android:textSize="36sp"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/round_button_green"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="108dp"
        android:text="@string/group_join"
        android:id="@+id/button_joinGroup"
        android:textSize="36sp"
        android:textColor="@drawable/pressed_text_orange"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button_orange"/>

</LinearLayout>