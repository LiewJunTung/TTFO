<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group Code"
        android:textSize="30sp"
        android:id="@+id/editText_groupId"
        android:layout_gravity="center_horizontal" />

    <EditText android:id="@+id/editText_username"
        android:layout_width="match_parent"
        android:hint="Username"
        android:textSize="30sp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Join Group"
        android:id="@+id/button_joinGroup"
        android:layout_width="fill_parent"
        android:layout_height="108dp"
        android:textSize="36sp"
        android:textColor="@drawable/pressed_text_orange"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button_orange"/>
</LinearLayout>